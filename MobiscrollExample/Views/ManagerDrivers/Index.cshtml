@using Nestle.CH.HQ.RSL.WebApp
@using Nestle.CH.HQ.RSL.WebApp.Models
@using Nestle.CH.HQ.RSL.WebApp.Services;
@inject LanguageService _localization

@{
    Layout = "_Layout";
}

<!-- Header End -->
<body>

    <!-- Driver page -->
    <section class="main-section admin-section" id="passengers-section">
        <div class="passanger-container">
            <h3>@_localization.Getkey("Drivers")</h3>
            <div class="passanger-row">
                <div class="passanger-col">
                    <div class="passanger-header">
                        <div class="search-wrapper">
                            <input class="search search-box" type="search" name="gsearch" required="" placeholder="@_localization.Getkey("SearchDriver")" id="gsearch">
                        </div>
                        <div class="passanger-header-right">
                            <div class="select-wrapper">
                            </div>
                            <button class="btn btn-yellow" id="addDriverBtn">
                                <img class="icon-img m-r-10" src="./img/add.png" alt="add">
                                <span>@_localization.Getkey("AddDrivers")</span>
                            </button>
                        </div>
                    </div>
                    <div class="grid-table">
                        <div class="grid-wrapper">
                            <table id="passanger-grid"></table>
                        </div>
                    </div>
                </div>
                <div class="passanger-col">
                    <div class="passanger-info-blk">
                        <div class="box-container-blk">
                            <div class="box-container scroll-bar">
                                <div class="passanger-header">
                                    <span>@_localization.Getkey("PassengerHeaderName")</span>
                                    <img id="sort-button" data-id="1" class="icon-large-img pointer-event" src="./img/sort.png" alt="add">
                                    
                                </div>
                                <div class="passanger-info-list">
                                    <div class="combined-info-col-container">
                                    <div class="accordion" id="accordionPanelsStayOpenExample">
                                        <div class="accordion-item">
                                            <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                                                        @_localization.Getkey("ParameterCategoryAttribute")
                                                </button>
                                            </h2>
                                            <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
                                                <div class="accordion-body">
                                                    <div class="info-body">
                                                        <div class="info-col">
                                                            <div class="info-left">
                                                                <span>@_localization.Getkey("IdDisplayName")</span>
                                                                <img class="icon-img m-l-10" src="./img/circle-outline.png" alt="Info" title="@_localization.Getkey("DriverIdDescription")">
                                                            </div>
                                                            <div class="info-right">
                                                                <input type="text" id="textDriverId" disabled>
                                                                <input type="hidden" id="textSelectedAction">
                                                                @* <input type="text" id="textUpdateId"> *@
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="accordion-item">
                                            <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo">
                                                        @_localization.Getkey("MainDisplayName")
                                                </button>
                                            </h2>
                                            <div id="panelsStayOpen-collapseTwo" class="accordion-collapse show" aria-labelledby="panelsStayOpen-headingTwo">
                                                <div class="accordion-body">
                                                    <div class="info-body">
                                                        <div class="info-col">
                                                            <div class="info-left">
                                                                <span>@_localization.Getkey("LastNameDisplayName") <span class="required-red">*</span></span>
                                                                <img class="icon-img m-l-10" src="./img/circle-outline.png" alt="Info" title="@_localization.Getkey("DriverLastNameDescription")">
                                                            </div>
                                                            <div class="info-right">
                                                                    <input type="text" id="textLastName" class="admin-input-change">
                                                            </div>
                                                        </div>
                                                        <div class="info-col">
                                                            <div class="info-left">
                                                                <span>@_localization.Getkey("FirstNameDisplayName") <span class="required-red">*</span></span>
                                                                <img class="icon-img m-l-10" src="./img/circle-outline.png" alt="Info" title="@_localization.Getkey("DriverFirstNameDescription")">
                                                            </div>
                                                            <div class="info-right">
                                                                    <input type="text" id="textFirstName" class="admin-input-change">
                                                            </div>
                                                        </div>
                                                        <div class="info-col">
                                                            <div class="info-left">
                                                                <span>@_localization.Getkey("MobilePhoneDisplayName") <span class="required-red">*</span></span>
                                                                <img class="icon-img m-l-10" src="./img/circle-outline.png" alt="Info" title="@_localization.Getkey("DriverMobilePhoneDescription")">
                                                            </div>
                                                            <div class="info-right">
                                                                    <input type="tel" id="textMobileNumber" class="admin-input-change" pattern="[0-9]*" oninput="this.value = this.value.replace(/[^0-9]/g, '');" maxlength="10">
                                                            </div>
                                                        </div>
                                                        <div class="info-col">
                                                            <div class="info-left">
                                                                <span>@_localization.Getkey("DriverOwnerUserIdDisplayName")</span>
                                                                <img class="icon-img m-l-10" src="./img/circle-outline.png" alt="Info" title="@_localization.Getkey("DriverUserIdDescription")">
                                                            </div>
                                                            <div class="info-right">
                                                                    <select name="" id="textOwnerId" class="admin-input-change">
                                                                    <option value="">-Aucun-</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="info-col">
                                                            <div class="info-left">
                                                                <span>@_localization.Getkey("ValidDisplayName") <span class="required-red">*</span></span>
                                                                <img class="icon-img m-l-10" src="./img/circle-outline.png" alt="Info" title="@_localization.Getkey("DriverValidDescription")">
                                                            </div>
                                                            <div class="info-right">
                                                                    <select name="" id="textValid" class="admin-input-change">
                                                                    <option value=1>@_localization.Getkey("optionYes")</option>
                                                                    <option value=0>@_localization.Getkey("optionNo")</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="info-col">
                                                            <div class="info-left">
                                                                <span>@_localization.Getkey("DriverVehicleName")</span>
                                                                <img class="icon-img m-l-10" src="./img/circle-outline.png" alt="Info" title="@_localization.Getkey("DefaultVehicleIdDescription")">
                                                            </div>
                                                            <div class="info-right">
                                                                    <select name="" id="vehicleName" class="admin-input-change">
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="accordion-item">
                                            <h2 class="accordion-header" id="panelsStayOpen-headingThree">
                                                <button class="accordion-button " type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="false" aria-controls="panelsStayOpen-collapseThree">
                                                        @_localization.Getkey("DriverHour")
                                                </button>
                                            </h2>
                                            <div id="panelsStayOpen-collapseThree" class="accordion-collapse show" aria-labelledby="panelsStayOpen-headingThree">
                                                <div class="accordion-body">
                                                    <div class="info-body">
                                                        <div class="info-col">
                                                            <div class="info-left">
                                                                <span>@_localization.Getkey("DriverUnAssignedWarningHours") <span class="required-red">*</span></span>
                                                                <img class="icon-img m-l-10" src="./img/circle-outline.png" alt="Info" title="@_localization.Getkey("UnassignedWarningHoursDescription")">
                                                            </div>
                                                            <div class="info-right">
                                                                    <input type="number" id="textUnAssignedWarningHours" min="0" class="admin-input-change">
                                                            </div>
                                                        </div>

                                                        <div class="info-col">
                                                            <div class="info-left">
                                                                <span>@_localization.Getkey("DriverUnConfirmedWarningHours") <span class="required-red">*</span></span>
                                                                <img class="icon-img m-l-10" src="./img/circle-outline.png" alt="Info" title="@_localization.Getkey("UnconfirmedWarningHoursDescription")">
                                                            </div>
                                                            <div class="info-right">
                                                                <input type="number" id="textUnConfirmedWarningHours" min="0" class="admin-input-change">
                                                            </div>
                                                        </div>
                                                        <div class="info-col">
                                                            <div class="info-left">
                                                                <span>@_localization.Getkey("DriverWeeklyWorkingHours") <span class="required-red">*</span></span>
                                                                <img class="icon-img m-l-10" src="./img/circle-outline.png" alt="Info" title="@_localization.Getkey("WeeklyWorkingHoursDescription")">
                                                            </div>
                                                            <div class="info-right">
                                                                    <input type="number" id="textWeeklyWorkingHours" min="0" class="admin-input-change">
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="accordion-item">
                                            <h2 class="accordion-header" id="panelsStayOpen-headingsix">
                                                <button class="accordion-button " type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapsesix" aria-expanded="false" aria-controls="panelsStayOpen-collapsesix">
                                                        @_localization.Getkey("DriverLogDataDisplayName")
                                                </button>
                                            </h2>
                                            <div id="panelsStayOpen-collapsesix" class="accordion-collapse show" aria-labelledby="panelsStayOpen-headingsix">
                                                <div class="accordion-body">
                                                    <div class="info-body">
                                                        <div class="info-col">
                                                            <div class="info-left">
                                                                <span>@_localization.Getkey("TimeStampDisplayName") <span class="required-red">*</span></span>
                                                                <img class="icon-img m-l-10" src="./img/circle-outline.png" alt="Info" title="@_localization.Getkey("TimeStampDescription")">
                                                            </div>
                                                            <div class="info-right">
                                                                <input type="text" id="textTimeStamp1" disabled>
                                                            </div>
                                                        </div>
                                                        <div class="info-col">
                                                            <div class="info-left">
                                                                <span>@_localization.Getkey("ModifiedByDisplayName") <span class="required-red">*</span></span>
                                                                <img class="icon-img m-l-10" src="./img/circle-outline.png" alt="Info" title="@_localization.Getkey("ModifiedByDescription")">
                                                            </div>
                                                            <div class="info-right">
                                                                <input type="text" id="textModifiedBy" value="" disabled>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                </div>
                            </div>
                            <div class="box-bottom">
                                <button type="button" class="btn btn-yellow" id="enregisterBtn">@_localization.Getkey("insertBtn")</button>
                                <button type="reset" class="btn btn-gray" id="resetBtn">@_localization.Getkey("closeBtn")</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Delete Pop up start-->
    <div class="modal fade alert-modal" id="alert-delete-popup" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="vertical-alignment-helper">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header"></div>
                    <div class="modal-body">
                        @{
                            string deleteQuestion = @_localization.Getkey("alertQuestionDelete");
                            string driver = @_localization.Getkey("Driver");
                            string deleteSatement = string.Format(deleteQuestion, driver);
                        }
                        <h4 id="alertPassengerDelete">@deleteSatement</h4>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-yellow" id="btnDeleteConfirm">@_localization.Getkey("Confirm")</button>
                        <button type="button" class="btn btn-border" data-bs-dismiss="modal" aria-label="Close">@_localization.Getkey("CancelButton")</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade alert-modal alert_statement" id="alert-update-popup" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="vertical-alignment-helper">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header"></div>
                    <div class="modal-body">
                        @{
                            string updateQuestion = @_localization.Getkey("alertQuestionUpdate");
                            string driver1 = @_localization.Getkey("Driver");
                            string updateSatement = string.Format(updateQuestion, driver1);
                        }
                        <h4 id="alertPassengerUpdate">@updateSatement</h4>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-yellow" id="btnUpdateConfirm">@_localization.Getkey("Confirm")</button>
                        <button type="button" class="btn btn-border" data-bs-dismiss="modal" aria-label="Close">@_localization.Getkey("CancelButton")</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade alert-modal alert_statement" id="alert-insert-popup" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="vertical-alignment-helper">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header"></div>
                    <div class="modal-body">
                        @{
                            string insertQuestion = @_localization.Getkey("alertQuestionInsert");
                            string driver2 = @_localization.Getkey("Driver");
                            string insertSatement = string.Format(insertQuestion, driver2);
                        }
                        <h4 id="alertPassengerInsert">@insertSatement</h4>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-yellow" id="btnInsertConfirm">@_localization.Getkey("Confirm")</button>
                        <button type="button" class="btn btn-border" data-bs-dismiss="modal" aria-label="Close">@_localization.Getkey("CancelButton")</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--  Alert-Update-Start  -->
    <div class="modal fade alert-modal" id="alert-update-green" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="vertical-alignment-helper">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        <h4 id="alertUpdateSuccess"><span>@_localization.Getkey("Success")</span> @_localization.Getkey("SuccessUpdateStatement")</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <!--alert red Start -->
    <div class="modal fade alert-modal alert_statement" id="alert-delete-red" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="vertical-alignment-helper">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        @{
                            string status = @_localization.Getkey("Delete");
                            string originalString = @_localization.Getkey("alertDeleteDanger");
                            string driver3 = @_localization.Getkey("Driver");
                            string replacedString = string.Format(originalString, driver3);
                        }
                        <h4 id="alertDeleteDanger"><span>@status</span> @replacedString</h4>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--alert red End -->
    <!-- Modal -->
    <!--alert green Start -->
    <div class="modal fade alert-modal" id="alert-insert-green" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="vertical-alignment-helper">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        <h4 id="alertInsertSuccess"><span>@_localization.Getkey("Success")</span> @_localization.Getkey("SuccessInsertStatement")</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--alert green End -->
    <!-- Drivers page ENd -->
    <!--  Drivers Js Start -->
    <script src="~/scripts/managerdrivers.js?new Date().getTime()"></script>
    <!--  Drivers Grid Js End -->
    <!-- Drivers dependency -->

</body>
